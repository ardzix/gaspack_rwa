# Django Configuration
DEBUG=True
SECRET_KEY=your-secret-key-here

# Database Configuration
USE_POSTGRES=False
# PostgreSQL Settings (when USE_POSTGRES=True)
POSTGRES_DB=gaspack_rwa_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_postgres_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# SQLite Settings (when USE_POSTGRES=False)
SQLITE_NAME=db.sqlite3

# Media Storage Configuration
USE_S3=False
# AWS S3 Settings (when USE_S3=True)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_STORAGE_BUCKET_NAME=your_bucket_name
AWS_S3_ENDPOINT_URL=https://s3.amazonaws.com
AWS_S3_REGION_NAME=us-east-1
AWS_DEFAULT_ACL=private
AWS_S3_FILE_OVERWRITE=False
AWS_QUERYSTRING_AUTH=True

# Local Media Settings (when USE_S3=False)
DJANGO_MEDIA_ROOT=/path/to/your/media/folder
